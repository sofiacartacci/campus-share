@model IEnumerable<CampusShare.Web.Models.Prestamo>

@{
    ViewData["Title"] = "Mis Préstamos";
}

<div class="container mt-4 reservas-container">
    <h2><i class="bi bi-box-seam"></i> Mis Préstamos</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No tienes préstamos registrados.
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-house-door"></i> Volver al Home
        </a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Artículo</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prestamo in Model)
                    {
                        <tr>
                            <td>
                                @if (prestamo.Articulo != null)
                                {
                                    <strong>@prestamo.Articulo.Nombre</strong>
                                }
                            </td>
                            <td>@prestamo.FecInicio.ToString("dd/MM/yyyy")</td>
                            <td>@prestamo.FecFin.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (prestamo.Estado == CampusShare.Web.Models.EstadoRP.Vigente)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-arrow-repeat"></i> Vigente
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-check-circle"></i> Devuelto
                                    </span>
                                }
                            </td>
                            <td>
                                @if (prestamo.Estado == CampusShare.Web.Models.EstadoRP.Vigente)
                                {
                                    <form asp-action="Devolver" asp-route-id="@prestamo.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-primary"
                                            onclick="return confirm('¿Confirma la devolución de este préstamo?')">
                                            <i class="bi bi-box-arrow-up"></i> Devolver
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">
                                        <i class="bi bi-check-circle"></i> Préstamo finalizado
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>