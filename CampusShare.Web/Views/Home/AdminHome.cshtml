@model CampusShare.Web.ViewModels.AdminHomeViewModel
@{
    ViewData["Title"] = "Admin - CampusShare";
}

<div class="container mt-4 admin-page">

    <div class="admin-card mb-4">
        <h2 class="admin-section-title">
            <i class="bi bi-speedometer2 me-2"></i>Panel de Administraci√≥n
        </h2>
        <p class="text-muted mb-0">Gestion√° las reservas y pr√©stamos de los alumnos desde un solo lugar.</p>
    </div>

    <div class="admin-card mb-4">
        <label for="alumnoSelect" class="form-label fw-semibold">
            <i class="bi bi-person-fill me-2"></i>Seleccionar Alumno
        </label>
        <select class="form-select" id="alumnoSelect">
            <option value="" selected disabled>Seleccione un alumno...</option>
            @foreach (var alumno in Model.Alumnos)
            {
                <option value="@alumno.Id">@alumno.Nombre @alumno.Apellido - @alumno.Email</option>
            }
        </select>
    </div>

    <div class="admin-card mb-4">
        <label for="accionSelect" class="form-label fw-semibold">
            <i class="bi bi-list-task me-2"></i>Acci√≥n a Realizar
        </label>
        <select class="form-select" id="accionSelect" disabled>
            <option value="" selected disabled>Primero seleccione un alumno...</option>
            <option value="aprobar-reserva">Aprobar o Cancelar Reserva del Alumno</option>
            <option value="crear-reserva">Crear Reserva para el Alumno</option>
            <option value="tomar-prestamo">Hacer que el Alumno Tome un Pr√©stamo</option>
            <option value="devolver-prestamo">Hacer que el Alumno Devuelva un Pr√©stamo</option>
        </select>
    </div>

    <div class="admin-card">
        <h4 class="admin-section-title mb-3">
            <i class="bi bi-gear-fill me-2"></i>Ejecutar Acci√≥n
        </h4>

        <div id="noActionSelected" class="text-center text-muted py-5">
            <i class="bi bi-arrow-up-circle" style="font-size: 3rem; opacity: 0.3;"></i>
            <p class="mt-3">Seleccione un alumno y una acci√≥n para continuar</p>
        </div>

        <div id="aprobarReservaForm" class="action-form" style="display: none;">
            <h5 class="mb-3">
                <i class="bi bi-check2-circle me-2"></i>Aprobar o Cancelar Reserva del Alumno
            </h5>
            <form id="formAprobarReserva" class="d-flex flex-column gap-3">
                <div class="mb-3">
                    <label class="form-label">Reserva Pendiente *</label>
                    <select class="form-select" name="reservaId" id="selectReservasPendientes" required>
                        <option value="" selected disabled>Cargando reservas...</option>
                    </select>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-action btn-aprobar-reserva d-flex align-items-center">
                        <i class="bi bi-check-circle me-2"></i>Aprobar Reserva
                    </button>
                    <button type="button" id="btnCancelarReservaDesdeAprobar"
                            class="btn btn-action btn-cancelar-reserva d-flex align-items-center">
                        <i class="bi bi-x-circle me-2"></i>Cancelar Reserva
                    </button>
                </div>
            </form>
        </div>

        <div id="crearReservaForm" class="action-form" style="display: none;">
            <h5 class="mb-3">
                <i class="bi bi-calendar-plus me-2"></i>Crear Reserva para el Alumno
            </h5>
            <form id="formCrearReserva" class="d-flex flex-column gap-3">
                <div class="mb-3">
                    <label class="form-label">Art√≠culo *</label>
                    <select class="form-select" name="articuloId" required>
                        <option value="" selected disabled>Seleccione un art√≠culo...</option>
                        @foreach (var articulo in Model.Articulos)
                        {
                            <option value="@articulo.Id">@articulo.Nombre - @articulo.TipoArticulo</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Fecha Inicio *</label>
                    <input type="date" class="form-control" name="fechaInicio" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Fecha Fin *</label>
                    <input type="date" class="form-control" name="fechaFin" required />
                </div>
                <button type="submit" class="btn btn-action btn-crear-reserva d-flex align-items-center">
                    <i class="bi bi-plus-circle me-2"></i>Crear Reserva
                </button>
            </form>
        </div>

        <div id="tomarPrestamoForm" class="action-form" style="display: none;">
            <h5 class="mb-3">
                <i class="bi bi-box-arrow-right me-2"></i>Hacer que el Alumno Tome un Pr√©stamo
            </h5>
            <form id="formTomarPrestamo" class="d-flex flex-column gap-3">
                <div class="mb-3">
                    <label class="form-label">Reserva Aprobada *</label>
                    <select class="form-select" name="reservaId" id="selectReservasAprobadas" required>
                        <option value="" selected disabled>Cargando reservas...</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-action btn-tomar-prestamo d-flex align-items-center">
                    <i class="bi bi-check-circle me-2"></i>Tomar Pr√©stamo
                </button>
            </form>
        </div>

        <div id="devolverPrestamoForm" class="action-form" style="display: none;">
            <h5 class="mb-3">
                <i class="bi bi-box-arrow-in-left me-2"></i>Hacer que el Alumno Devuelva un Pr√©stamo
            </h5>
            <form id="formDevolverPrestamo" class="d-flex flex-column gap-3">
                <div class="mb-3">
                    <label class="form-label">Pr√©stamo Vigente *</label>
                    <select class="form-select" name="prestamoId" id="selectPrestamosVigentes" required>
                        <option value="" selected disabled>Cargando pr√©stamos...</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-action btn-devolver-prestamo d-flex align-items-center">
                    <i class="bi bi-check-circle me-2"></i>Devolver Pr√©stamo
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const alumnoSelect = document.getElementById('alumnoSelect');
            const accionSelect = document.getElementById('accionSelect');
            const noActionSelected = document.getElementById('noActionSelected');
            const aprobarReservaForm = document.getElementById('aprobarReservaForm');
            const crearReservaForm = document.getElementById('crearReservaForm');
            const tomarPrestamoForm = document.getElementById('tomarPrestamoForm');
            const devolverPrestamoForm = document.getElementById('devolverPrestamoForm');

            alumnoSelect.addEventListener('change', function () {
                if (this.value) {
                    accionSelect.disabled = false;
                    accionSelect.value = '';
                    hideAllForms();
                }
            });

            accionSelect.addEventListener('change', async function () {
                const alumnoId = alumnoSelect.value;
                hideAllForms();
                
                if (this.value === 'aprobar-reserva') {
                    await cargarReservasPendientes(alumnoId);
                    aprobarReservaForm.style.display = 'block';
                } else if (this.value === 'crear-reserva') {
                    crearReservaForm.style.display = 'block';
                } else if (this.value === 'tomar-prestamo') {
                    await cargarReservasAprobadas(alumnoId);
                    tomarPrestamoForm.style.display = 'block';
                } else if (this.value === 'devolver-prestamo') {
                    await cargarPrestamosVigentes(alumnoId);
                    devolverPrestamoForm.style.display = 'block';
                }
            });

            function hideAllForms() {
                noActionSelected.style.display = 'none';
                aprobarReservaForm.style.display = 'none';
                crearReservaForm.style.display = 'none';
                tomarPrestamoForm.style.display = 'none';
                devolverPrestamoForm.style.display = 'none';
            }

            async function cargarReservasPendientes(alumnoId) {
                const select = document.getElementById('selectReservasPendientes');
                select.innerHTML = '<option value="">Cargando...</option>';
                try {
                    const response = await fetch(`/api/admin/reservas-pendientes/${alumnoId}`);
                    const reservas = await response.json();
                    if (reservas.length === 0)
                        select.innerHTML = '<option value="">No hay reservas pendientes</option>';
                    else
                        select.innerHTML = reservas.map(r =>
                            `<option value="${r.id}">${r.articulo} - ${r.fechaInicio} a ${r.fechaFin}</option>`
                        ).join('');
                } catch (error) {
                    select.innerHTML = '<option value="">Error al cargar reservas</option>';
                    console.error(error);
                }
            }

            async function cargarReservasAprobadas(alumnoId) {
                const select = document.getElementById('selectReservasAprobadas');
                select.innerHTML = '<option value="">Cargando...</option>';
                try {
                    const response = await fetch(`/api/admin/reservas-aprobadas/${alumnoId}`);
                    const reservas = await response.json();
                    if (reservas.length === 0)
                        select.innerHTML = '<option value="">No hay reservas aprobadas</option>';
                    else
                        select.innerHTML = reservas.map(r =>
                            `<option value="${r.id}">${r.articulo} - ${r.fechaInicio} a ${r.fechaFin}</option>`
                        ).join('');
                } catch (error) {
                    select.innerHTML = '<option value="">Error al cargar reservas</option>';
                    console.error(error);
                }
            }

            async function cargarPrestamosVigentes(alumnoId) {
                const select = document.getElementById('selectPrestamosVigentes');
                select.innerHTML = '<option value="">Cargando...</option>';
                try {
                    const response = await fetch(`/api/admin/prestamos-vigentes/${alumnoId}`);
                    const prestamos = await response.json();
                    if (prestamos.length === 0)
                        select.innerHTML = '<option value="">No hay pr√©stamos vigentes</option>';
                    else
                        select.innerHTML = prestamos.map(p =>
                            `<option value="${p.id}">${p.articulo} - ${p.fechaInicio} a ${p.fechaFin}</option>`
                        ).join('');
                } catch (error) {
                    select.innerHTML = '<option value="">Error al cargar pr√©stamos</option>';
                    console.error(error);
                }
            }

            document.getElementById('formAprobarReserva').addEventListener('submit', async function (e) {
                e.preventDefault();
                const formData = new FormData(this);
                const reservaId = parseInt(formData.get('reservaId'));
                try {
                    const response = await fetch('/api/admin/aprobar-reserva', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ reservaId })
                    });
                    if (response.ok) {
                        alert('‚úÖ Reserva aprobada exitosamente');
                        location.reload();
                    } else {
                        const error = await response.text();
                        alert('‚ùå Error: ' + error);
                    }
                } catch (error) {
                    alert('‚ö†Ô∏è Error: ' + error.message);
                }
            });

            document.getElementById('btnCancelarReservaDesdeAprobar').addEventListener('click', async function () {
                const select = document.getElementById('selectReservasPendientes');
                const reservaId = parseInt(select.value);
                if (!reservaId) return alert('‚ö†Ô∏è Seleccione una reserva antes de cancelar.');
                if (!confirm('¬øEst√° seguro que desea cancelar esta reserva?')) return;
                try {
                    const response = await fetch('/api/admin/cancelar-reserva', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ reservaId })
                    });
                    if (response.ok) {
                        alert('üóëÔ∏è Reserva cancelada exitosamente');
                        location.reload();
                    } else {
                        const error = await response.text();
                        alert('‚ùå Error: ' + error);
                    }
                } catch (error) {
                    alert('‚ö†Ô∏è Error: ' + error.message);
                }
            });

            document.getElementById('formCrearReserva').addEventListener('submit', async function (e) {
                e.preventDefault();
                const formData = new FormData(this);
                const alumnoId = parseInt(alumnoSelect.value);
                const articuloId = parseInt(formData.get('articuloId'));
                const fechaInicio = new Date(formData.get('fechaInicio'));
                const fechaFin = new Date(formData.get('fechaFin'));

                try {
                    const response = await fetch('/api/admin/crear-reserva', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ alumnoId, articuloId, fechaInicio, fechaFin })
                    });
                    if (response.ok) {
                        alert('‚úÖ Reserva creada exitosamente');
                        location.reload();
                    } else {
                        const error = await response.text();
                        alert('‚ùå Error: ' + error);
                    }
                } catch (error) {
                    alert('‚ö†Ô∏è Error: ' + error.message);
                }
            });

            document.getElementById('formTomarPrestamo').addEventListener('submit', async function (e) {
                e.preventDefault();
                const formData = new FormData(this);
                const reservaId = parseInt(formData.get('reservaId'));

                try {
                    const response = await fetch('/api/admin/tomar-prestamo', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ reservaId })
                    });
                    if (response.ok) {
                        alert('‚úÖ Pr√©stamo tomado exitosamente');
                        location.reload();
                    } else {
                        const error = await response.text();
                        alert('‚ùå Error: ' + error);
                    }
                } catch (error) {
                    alert('‚ö†Ô∏è Error: ' + error.message);
                }
            });

            document.getElementById('formDevolverPrestamo').addEventListener('submit', async function (e) {
                e.preventDefault();
                const formData = new FormData(this);
                const prestamoId = parseInt(formData.get('prestamoId'));

                try {
                    const response = await fetch('/api/admin/devolver-prestamo', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ prestamoId })
                    });
                    if (response.ok) {
                        alert('‚úÖ Pr√©stamo devuelto exitosamente');
                        location.reload();
                    } else {
                        const error = await response.text();
                        alert('‚ùå Error: ' + error);
                    }
                } catch (error) {
                    alert('‚ö†Ô∏è Error: ' + error.message);
                }
            });
        });
    </script>
}