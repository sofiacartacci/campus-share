@model IEnumerable<CampusShare.Web.Models.Reserva>

@{
    ViewData["Title"] = "Mis Reservas";
}

<div class="container mt-4">
    <h2><i class="bi bi-calendar-check"></i> Mis Reservas</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No tienes reservas registradas.
        </div>
        <a asp-controller="Articulos" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nueva Reserva
        </a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Artículo</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reserva in Model)
                    {
                        <tr>
                            <td>
                                @if (reserva.Articulo != null)
                                {
                                    <strong>@reserva.Articulo.Nombre</strong>
                                }
                            </td>
                            <td>@reserva.FecInicio</td>
                            <td>@reserva.FecFin</td>
                            <td>
                                @switch (reserva.EstadoReserva)
                                {
                                    case CampusShare.Web.Models.EstadoReserva.Pendiente:
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Pendiente
                                        </span>
                                        break;
                                    case CampusShare.Web.Models.EstadoReserva.Aprobada:
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Aprobada
                                        </span>
                                        break;
                                    case CampusShare.Web.Models.EstadoReserva.Rechazada:
                                        <span class="badge bg-danger" 
                                              data-bs-toggle="tooltip" 
                                              data-bs-placement="top"
                                              title="@reserva.MotivoRechazo">
                                            <i class="bi bi-x-circle"></i> Rechazada
                                        </span>
                                        break;
                                    case CampusShare.Web.Models.EstadoReserva.Cancelada:
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-ban"></i> Cancelada
                                        </span>
                                        break;
                                    case CampusShare.Web.Models.EstadoReserva.Completada:
                                        <span class="badge bg-info">
                                            <i class="bi bi-check-all"></i> Completada
                                        </span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (reserva.EstadoReserva == CampusShare.Web.Models.EstadoReserva.Pendiente 
                                     || reserva.EstadoReserva == CampusShare.Web.Models.EstadoReserva.Aprobada)
                                {
                                    <form asp-action="Cancelar" asp-route-id="@reserva.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('¿Está seguro de que desea cancelar esta reserva?')">
                                            <i class="bi bi-x-circle"></i> Cancelar
                                        </button>
                                    </form>
                                }
                                @if (reserva.EstadoReserva == CampusShare.Web.Models.EstadoReserva.Rechazada)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-info"
                                            data-bs-toggle="modal"
                                            data-bs-target="#motivoModal@(reserva.Id)">
                                        <i class="bi bi-info-circle"></i> Ver Motivo
                                    </button>

                                    <!-- Modal para ver motivo de rechazo -->
                                    <div class="modal fade" id="motivoModal@(reserva.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title">Motivo del Rechazo</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p><strong>Reserva ID:</strong> @reserva.Id</p>
                                                    <p><strong>Motivo:</strong></p>
                                                    <div class="alert alert-warning">
                                                        @reserva.MotivoRechazo
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Inicializar tooltips de Bootstrap
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}